{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "preserveValueImports": false,
    "verbatimModuleSyntax": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
